<% Producto = require("models/producto")  %>
<% producto = Producto.find(@pedidoItem.Producto)  %>

<td class="primary"><h4 class="popable" rel="popover" data-content="Descuentos y Ofertas" data-original-title="<%= producto.InventarioActual %>"> <%= producto.Name.capitalize() %> </h4></td>

<td><h4><%= @pedidoItem.Precio.toMoney() %></h4></td>

<td><input class="span3 validatable" data-min-value="1" data-max-value="<%= producto.InventarioActual %>" data-type="Cantidad" data-numeric="true" value="<%= @pedidoItem.Cantidad %>" /></td>

<td><input class="span3 validatable" data-min-value="0" data-max-value="<%= @negociacion.Descuento %>" data-type="Descuento" data-numeric="true" value="<%= @pedidoItem.Descuento %>" /></td>

<td class="numeric"><h4><%= @pedidoItem.Impuesto %><h4></td>

<td><a class="btn btn-danger btn-small js_btn_remove"><i class="icon-remove icon-white"></i></a></td>
